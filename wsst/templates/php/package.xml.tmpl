<?xml version="1.0" encoding="UTF-8"?>
<package version="2.0" xmlns="http://pear.php.net/dtd/package-2.0" xmlns:tasks="http://pear.php.net/dtd/tasks-1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0 http://pear.php.net/dtd/tasks-1.0.xsd http://pear.php.net/dtd/package-2.0 http://pear.php.net/dtd/package-2.0.xsd">
 <name><%[$package_name]%></name>
 <channel><%[$php_channel||"pear.php.net"]%></channel>
 <summary>An Interface for <%[$title]%></summary>
 <description><%[$php_description||$abstract]%></description>
<%[ foreach (@author) {
    my ($name, $email) = (/^(.*?)\s+<(.*?)>$/);
    my $user = (split(/\@/, $email))[0];
    $OUT .=<<EOS;
 <lead>
  <name>$name</name>
  <user>$user</user>
  <email>$email</email>
  <active>yes</active>
 </lead>
EOS
} ]%> <date><%[strftime("%Y-%m-%d", localtime())]%></date>
 <time><%[strftime("%H:%M:%S", localtime())]%></time>
 <version>
  <release><%[$php_version_release||$version]%></release>
  <api><%[$php_version_api||$version]%></api>
 </version>
 <stability>
  <release><%[$php_stability_release||"beta"]%></release>
  <api><%[$php_stability_api||"beta"]%></api>
 </stability>
 <license uri="<%[$php_license_uri]%>"><%[$license]%></license>
 <notes><%[$php_notes||"#"]%></notes>
 <contents>
  <dir name="/">
<%[make_package_contents()]%>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>4.0.0</min>
   </php>
   <pearinstaller>
    <min>1.4.0b1</min>
   </pearinstaller>
   <package>
    <name>PEAR</name>
    <channel>pear.php.net</channel>
   </package>
   <package>
    <name>XML_Serializer</name>
    <channel>pear.php.net</channel>
   </package>
  </required>
  <optional>
   <package>
    <name>PHPUnit</name>
    <channel>pear.phpunit.de</channel>
    <min>3.2.8</min>
   </package>
  </optional>
 </dependencies>
 <phprelease />
 <changelog>
  <release>
   <version>
    <release><%[$version]%></release>
    <api><%[$version]%></api>
   </version>
   <stability>
    <release>beta</release>
    <api>beta</api>
   </stability>
   <date><%[strftime("%Y-%m-%d", localtime())]%></date>
   <license uri="<%[$php_license_uri]%>"><%[$license]%></license>
   <notes><%[$php_notes||"#"]%></notes>
  </release>
 </changelog>
</package>
